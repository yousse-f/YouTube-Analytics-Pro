# YouTube Data Pipeline API - Environment Configuration
# =====================================================

# API Security
API_KEY=your_secure_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_TITLE=YouTube Data Pipeline API

# CORS Settings (Comma-separated list of allowed origins)
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-API-Key

# YouTube Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
PAGE_LOAD_TIMEOUT=15000
SELENIUM_HEADLESS=true

# Retry Configuration
RETRY_ATTEMPTS=3
RETRY_WAIT_SECONDS=2
RETRY_BACKOFF_MULTIPLIER=1.5
RETRY_MAX_WAIT_SECONDS=10

# Performance Settings
CONCURRENT_REQUESTS=3
BROWSER_POOL_SIZE=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_TO_FILE=false
LOG_FILE_PATH=logs/youtube_pipeline.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Development Settings
DEBUG=false
RELOAD=false

# Monitoring and Health Check
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true

# Chrome Browser Settings (Advanced)
CHROME_BINARY_PATH=
CHROME_DRIVER_PATH=
CHROME_OPTIONS=--no-sandbox,--disable-dev-shm-usage,--disable-blink-features=AutomationControlled
