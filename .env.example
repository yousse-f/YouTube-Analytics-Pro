# API Security
API_KEY=your_api_key_here

# Crawlbase API Configuration
CRAWLBASE_NORMAL_TOKEN=your_crawlbase_normal_token_here
CRAWLBASE_JS_TOKEN=your_crawlbase_js_token_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_TITLE=SCS Data Management API

# CORS Settings (Lista domini autorizzati)
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-API-Key

# Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
PROXY_URL=

# Retry Configuration
RETRY_ATTEMPTS=3
RETRY_WAIT_SECONDS=2
RETRY_BACKOFF_MULTIPLIER=1.5
RETRY_MAX_WAIT_SECONDS=10

# Instagram Configuration
INSTAGRAM_BASE_URL=https://www.instagram.com/

# Performance Settings
PAGE_LOAD_TIMEOUT=10000
CONCURRENT_REQUESTS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
